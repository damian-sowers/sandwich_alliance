<!-- START HEADER  -->
<div class="header-container">
  <header class="wrapper clearfix">
    <div id="header" class="internal">
      <%= render "shared/header" %>
    </div>
  </header>
</div>

<div class="main-container internal">
  <div class="main wrapper clearfix section">
  	<div class="circle_container">
  		<div class="circle">Login</div>
  	</div>
		<article style="margin-top:-40px">
				<div class="well" style="background-color:#fff; margin-top:50px">
					<div style="text-align:center">
				<h2>Login to your account</h2>
				</div>
				<hr>
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" } ) do |f| %>
				  <%= devise_error_messages! %>
				  <div class="row">
				  <div style="float:left; margin-left:30px; margin-right:30px;">

				  <div class="control-group">
				  	<%= f.label :email, class: "control-label required" %>
				  	<div class="controls">
				  		<%= f.email_field :email, class: "input-xlarge" %>
				  	</div>
				  </div>

				  <div class="control-group">
				  	<%= f.label :password, "Password", class: "control-label required" %>
				  	<div class="controls">
				  		<%= f.password_field :password, class: "input-xlarge" %>
				  	</div>
				  </div>

				  <% if devise_mapping.rememberable? -%>
    				<div class="control-group">
    						<%= f.label :remember_me, class: "control-label" %>
    					<div class="controls">
								<%= f.check_box :remember_me %>
							</div>
						</div>
  				<% end -%>
				</div>
				<div style="margin-left:30px;">
					<span>You will be able to find alliance merchants in your area, read reviews, and much more...</span>
				</div>
				</div>
				<hr>
				<br/>
				  <div><%= f.submit "Login", class: "btn btn-info" %></div>
				<% end %>
				<br/>
				<%= render "devise/shared/links" %>
			</div>
			</div> 
		</article>
	</div>         
</div> 

<%= render "shared/footer" %>
